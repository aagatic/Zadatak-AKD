@model IEnumerable<WebApplication1.Models.knjiga>

@{
    ViewBag.Title = "Index";
   
}

<h2>Lista svih knjiga i njihovih autora</h2>

<p>
    @Html.ActionLink("Kreiraj novi", "Create")
</p>
<div class="row">
    <div class="col-sm-12"
         <div class="form-inline pull-right"
              <label>Pretraži</label>
        <p>
            @using (Html.BeginForm("Index", "Knjiga", FormMethod.Get))
            {
                @Html.TextBox("search")<input type="submit" value="Izlistaj po autoru" />
            }
        </p>
               
</div>
    
<table id="grdUsers" class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.godina_izdanja)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.autorID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.godina_izdanja)
        </td>
        <td> 
            @Html.DisplayFor(modelItem => item.autor.ime)
            @Html.DisplayFor(modelItem => item.autor.prezime)

        </td>
        <td>
            @Html.ActionLink("Uredi", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.id }) |
            @Html.ActionLink("Obriši", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
